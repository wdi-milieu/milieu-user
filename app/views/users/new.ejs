
<div class="container-fluid main">

  <div>
    <h3  class="title">SIGN UP</h3>
  </div>
  <hr class="hr">

<form action="/users" method="post">

  <!-- loop function to display the demograhpics array from demograhics.js -->
  <% demographics.forEach(function(elem, index){ %>
        <% if(elem.type == "textfield") { %>
          <div class="form-group">
            <label>
              <%= elem.label %>
            </label>
            <input type="text" class="form-control" id="<%= elem.label %>" placeholder="<%= elem.label %>">
          </div>

        <% } else if(elem.type == "select") { %>
          <div class="form-group">
            <label>
              <%= elem.label %>
            </label>

            <select>
              <% elem.options.forEach(function(option, index){ %>
                <option class="form-control" value=< %=option.value%> >
                  <%= option.text %>
                </option>
              <% }) %>
            </select>

          </div>

        <% } else { %>
          <div class="form-group">
            <label>
              <%= elem.label %>
            </label>
            <input type="password" id="<%= elem.label %>" placeholder="<%= elem.label %>" class="form-control">
          </div>

        <% } %>

  <% }) %>

    <button type="submit" class="btn btn-default">Sign Up!</button>
  </form>
</div>
